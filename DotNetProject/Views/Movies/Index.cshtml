@model IEnumerable<DotNetProject.Models.Movies>

@{
    ViewData["Title"] = "Index";
}
@{

        Layout = "_AdminLayout";
    
   
}


<p>
    <a asp-action="Create" class="btn btn-light">Add Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Cast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.PricingDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            
            <th>
                Show Timings
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <img class="card-img-top" src="@Url.Content(item.ImageUrl)" alt="Movie Pic" style="height:100px; width:100px">

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Cast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.PricingDetails.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
           
            <td>
                    @foreach(var timing in item.showTimings)
                    {
                        <li>
                            Show Timing:@timing.show_datetime
                        </li>
                    }
                </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-danger" asp-route-id="@item.MovieId">Edit</a> 
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.MovieId">Details</a>
                    <a asp-action="Delete" class="btn btn-outline-warning" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
