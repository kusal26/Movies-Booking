@model DotNetProject.Models.Movies

@{
    ViewData["Title"] = "Details";
}




<section id="trend" class="pt-4 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4 class="mb-0" style=" color: rgb(255 255 255)">
                    <i class="fa fa-youtube-play align-middle col_red me-1"></i>
                    @if (Model.ReleaseDate <= DateTime.Now)
                    {
                    
                        <span class="col_red">Latest Movies</span>
                    }
                    else
                    {
                    <span class="col_red">Upcoming Movies</span>

                    }
                   
                </h4>
            </div>
           
        </div>
        <div class="row mt-4">
            <!-- Movie Picture on the Left Side -->
            <div class="col-md-3 col-sm-6">
               
                    <div class="card mb-4">
                        <img src="~/@Url.Content(Model.ImageUrl)" class="card-img-top movie-image" alt="Movie Pic">
                    </div>
                
               
            </div>

            <div class="col-md-9 col-sm-6">
                <dl class=" row">
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">

                        @Html.DisplayNameFor(model => model.Name)

                       
                    <dd class="col-sm-10 " style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.Name)

                    </dd>
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.Description)

                    </dt>
                    <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.Description)


                    </dd>
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.Cast)


                    </dt>
                    <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.Cast)


                    </dd>
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.Genre)


                    </dt>
                    <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.Genre)


                    </dd>
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.Duration)


                    </dt>
                    <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.Duration)

                    </dd>
                    <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.PricingDetails)



                    </dt>
                    <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.PricingDetails.Price)


                    </dd>
                        @if (Model.ReleaseDate > DateTime.Now)
                        {
                        <dt class="col-sm-2" style=" color: rgb(255 255 255)">
                            @Html.DisplayNameFor(model => model.ReleaseDate)



                    </dt>
                        <dd class="col-sm-10" style=" color: rgb(255 255 255)">
                            @Html.DisplayFor(model => model.ReleaseDate)


                    </dd>
                        }
                   
                        
                </dl>

             
                @if (Model.ReleaseDate <= DateTime.Now)
                {
                    <a asp-controller="Home" asp-action="Book" asp-route-id="@Model.MovieId" class="btn btn-outline-success">Book </a>
                }
               

            </div>
        </div>
    </div>
</section>



