@model DotNetProject.Models.Booking

@{
    ViewData["Title"] = "Edit";
}
@{
    if (ViewBag.IsAdmin = true)
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking_Id" />
            <div class="form-group">
                <label asp-for="Timing_Id" class="control-label"></label>
                <select asp-for="Timing_Id" class="form-control" asp-items="ViewBag.TimingId"></select>

                <span asp-validation-for="Timing_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfBookedSeats" class="control-label"></label>
                <input asp-for="NoOfBookedSeats" class="form-control" />
                <span asp-validation-for="NoOfBookedSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedDate" class="control-label"></label>
                <input asp-for="BookedDate" class="form-control" />
                <span asp-validation-for="BookedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
