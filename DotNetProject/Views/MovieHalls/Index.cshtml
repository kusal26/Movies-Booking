@model IEnumerable<DotNetProject.Models.MovieHall>

@{
    ViewData["Title"] = "Index";
}
@{
   
        Layout = "_AdminLayout";
  
}


<p>
    <a asp-action="Create" class="btn btn-light">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HallName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeat)
            </th>
            <th>
                Show 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HallName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeat)
            </td>
                <td>
                    @foreach(var item1 in item.Timing)
                    {
                        
                    <ul>
                        <li>@item1.show_datetime</li>
                    </ul>
                    }
                </td>
            <td>
                    <a asp-action="Edit" class="btn btn-outline-danger" asp-route-id="@item.HallId">Edit</a> 
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.HallId">Details</a> 
                    <a asp-action="Delete" class="btn btn-outline-warning" asp-route-id="@item.HallId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
